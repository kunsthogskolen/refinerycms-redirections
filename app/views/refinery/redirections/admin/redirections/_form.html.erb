<%= form_for [refinery, :redirections_admin, @redirection] do |f| -%>
  <%= render '/refinery/admin/error_messages',
             object: @redirection,
             include_object_name: true %>

  <div class='field'>
    <%= f.label :from_url -%>
    <%= f.text_field :from_url, class: 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :to_url -%>
    <%= f.text_field :to_url, class: 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :status_code -%>
    <%= f.select :status_code, Refinery::Redirections::Redirection.status_code.options, class: 'widest'  -%>
  </div>

  <%= render '/refinery/admin/form_actions', f: f,
             continue_editing: false,
             delete_title: t('delete', scope: 'refinery.redirections.admin.redirections.redirection'),
             delete_confirmation: t('message', scope: 'refinery.admin.delete', title: @redirection.from_url) %>
<% end -%>
