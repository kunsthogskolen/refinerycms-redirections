<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(redirection) -%>">
  <span class="title">
    <%= truncate(redirection.from_url, length: 45) %> &rarr; <%= truncate(redirection.to_url, length: 45) %>
  </span>

  <span class='actions'>
    <%= action_icon(:edit,    refinery.edit_redirections_admin_redirection_path(redirection), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.redirections_admin_redirection_path(redirection), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: redirection.from_url)}}  ) %>
  </span>
</li>
